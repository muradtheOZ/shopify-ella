                },
                {
                    "type" : "text",
                    "id" : "font_size_des",
                    "label" : "Description Font Size",
                    "default" : "12px"
                },          
                {
                    "type" : "text",
                    "id" : "button",
                    "label" : "Button",
                    "default" : "Shop Now"
