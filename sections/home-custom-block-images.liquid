                "step": 1,
                "default": 0
            },
            {
                "type": "range",
                "id": "margin_bottom_tab",
                "label": "Tablet",
                "min": 0,
                "max": 100,
                "step": 1,
                "default": 0
            },
            {
                "type": "range",
                "id": "margin_bottom",
                "label": "Desktop",
                "min": 0,
                "max": 100,
                "step": 1,
                "default": 0
            }	      
        ],
        "blocks": [
            {
                "type": "image",
                "name": "Image",
                "settings": [ 
                {
                    "type": "image_picker",
                    "id": "image",
                    "label" : "Select Image"
                },
                {
                    "type": "image_picker",
                    "id": "image_mb",
                    "label" : "Select Image Mobile"
                },
                {
                    "type" : "color",
                    "id" : "color_content",
                    "label" : "Color",
                    "default" : "#fff"
                },
                {
                    "type" : "color",
