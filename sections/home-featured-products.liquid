                <div class="grid-view-item no-product">
                  <div class="product-top">
                    <div class="not_img">
                      Product Img
                    </div>
                  </div>

                  <div class="product-bottom">
                    <div class="product-title">
                      <span>
                        Your product's name
                      </span>
                    </div>

                    <div class="price-box">
                      <span> $250.00 </span>
                    </div>
                  </div>
