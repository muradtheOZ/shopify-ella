{{section.settings.layout_style}}" id="featured-products-{{section.id}}" 
{% unless section.settings.layout_style == 'layout_style_7' %}
{% unless section.settings.layout_style == 'layout_style_2' %}data-featured-products-section{% endunless %} 
{% if section.settings.show_slider_featured_collection != blank %}data-loader-product data-collection="{{section.settings.show_slider_featured_collection}}" data-limit="{{ section.settings.slider_featured_limit_all }}" data-grid="{{ section.settings.collection_results_per_row1 }}" data-layout="carousel" sectionId="{{section.id}}"{% endif %}{% endunless %}>
