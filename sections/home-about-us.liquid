            },
            {
                "type" : "text",
                "id" : "button_text",
                "label" : "Button Text"
            },
            {
                "type" : "url",
                "id" : "button_text_link",
                "label" : "Button Link"
            },
            {
                "type" : "color",
                "id" : "color_button",
                "label" : "Color Button",
                "default" : "#202020"
            },
            {
                "type" : "color",
                "id" : "color_border_button",
                "label" : "Border Color Button",
                "default" : "#ffffff"
            },
            {
                "type" : "color",
                "id" : "bg_color_button",
