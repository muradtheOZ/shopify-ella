<div class="home-about-us {% if section.settings.style_title == 'style_2' %}style_2{% elsif section.settings.style_title == 'style_3' %}style_3{% endif %}{% if section.settings.title_sub != blank %} sub_title_padding{% endif %}{% if section.settings.style_about == 'style_2' %} style_about_2{% elsif section.settings.style_about == 'style_3' %} style_about_3{% elsif section.settings.style_about == 'style_4' %} style_about_4{% elsif section.settings.style_about == 'style_5' %} style_about_5{% elsif section.settings.style_about == 'style_6' %} style_about_6{% elsif section.settings.style_about == 'style_7' %} style_about_7{% endif %}" id="home-about-{{ section.id }}">
  <div class="container">
    <div class="row">
      <div class="col-12 col-lg-10 offset-lg-1">
        {% if section.settings.title != blank %}
            <h4 class="title">
              {% render 'multilang' with section.settings.title %}
            </h4>
        {% endif %}

        {% if section.settings.title_sub != blank %}
            <h3 class="sub-title">
              {% render 'multilang' with section.settings.title_sub %}
            </h3>
        {% endif %}
        
        {% if section.settings.des != blank and section.settings.style_about != 'style_3' %}
            <div class="des">
              {{ section.settings.des }}
            </div>
        {% endif %}

        {% if section.settings.button_text != blank %}
            <a class="btn btn-about-us" href="{{ section.settings.button_text_link }}">{{ section.settings.button_text }}</a>
        {% endif %}
      </div>
    </div>
    {% if section.blocks.size > 0 %}
    <div class="list-item">
        {% for block in section.blocks %}
            {% if block.settings.image != blank or block.settings.content != blank %}
            <div class="item column-{{section.blocks.size}}" id="item-{{block.id}}">
                

                {% if section.settings.style_about == 'style_5' %}
                    <div class="content-left">
                        {% if block.settings.icon_type == 'image' %}
                            {% if block.settings.image != blank %}
                            <div class="image">
                                <img data-srcset="{{ block.settings.image | img_url: '200x' }}" class="lazyload" alt="{{ block.settings.image.alt | default: shop.name }}" />
                            </div>
                            {% else %}
                                <a class="animate-scale" href="{{ block.settings.link }}">
                                    {% if section.settings.style_about == 'style_4' %}
                                        <div class="not_img">77 x 77px</div> 
                                    {% else %}
                                        <div class="not_img">48 x 48px</div> 
                                    {% endif %}    
                                </a>
                            {% endif %}
                        {% else %}
                            {% if block.settings.text_icon != blank %}
                            <div class="image">
                                {{ block.settings.text_icon }}
                            </div>
                            {% else %}
                                <a class="animate-scale" href="{{ block.settings.link }}">
                                </a>
                            {% endif %}
                        {% endif %}
                    </div>
                    <div class="content-right">
                        {% if block.settings.content != blank %}
                            <div class="content">
                                {{ block.settings.content }}
                            </div>
                        {% endif %}

                        {% if block.settings.content != blank %}
                            <p class="desctiption">{{ block.settings.description }}</p>
                        {% endif %}

                        {% if block.settings.text_button != blank %}
                            <a class="btn button_text" href="{{block.settings.link_icon}}">{{ block.settings.text_button }}</a>
                        {% endif %}
                    </div>
                {% else %}
                    <a {% unless block.settings.link_icon == blank %}href="{{block.settings.link_icon}}"{% endunless %}>
                    {% if block.settings.icon_type == 'image' %}
                        {% if block.settings.image != blank %}
                        <div class="image">
                            <img data-srcset="{{ block.settings.image | img_url: '200x' }}" class="lazyload" alt="{{ block.settings.image.alt | default: shop.name }}" />
                        </div>
                        {% else %}
                            <a class="animate-scale" href="{{ block.settings.link }}">
                                {% if section.settings.style_about == 'style_4' %}
                                    <div class="not_img">77 x 77px</div> 
                                {% elsif section.settings.style_about == 'style_6' %}
                                    <div class="not_img">70 x 235px</div> 
                                {% else %}
                                    <div class="not_img">48 x 48px</div> 
                                {% endif %}    
                            </a>
                        {% endif %}
                    {% else %}
                        {% if block.settings.text_icon != blank %}
                        <div class="image">
                            {{ block.settings.text_icon }}
                        </div>
                        {% else %}
                            <a class="animate-scale" href="{{ block.settings.link }}">
                            </a>
                        {% endif %}
                    {% endif %}

                    {% if block.settings.content != blank %}
                    <div class="content">
                        {{ block.settings.content }}
                    </div>
                    {% endif %}

                    {% if block.settings.content != blank %}
                    <p class="desctiption">{{ block.settings.description }}</p>
                    {% endif %}

                    {% if block.settings.text_button != blank %}
                    <a class="btn button_text" href="{{block.settings.link_icon}}">{{ block.settings.text_button }}</a>
                    {% endif %}

                    </a> 
                {% endif %}

                <style>
                    #item-{{block.id}} .button_text, #item-{{block.id}} .desctiption, #item-{{block.id}} .content p, #item-{{block.id}} .content a, #item-{{block.id}} .image svg, #item-{{block.id}} .image i {
                        color: {{ block.settings.color_content }};
                    }
                    .home-about-us.style_about_2 .list-item #item-{{block.id}} .content p:before {
                        background-color: {{ block.settings.color_content }};
                    }
                    .home-about-us.style_about_2 .list-item #item-{{block.id}} a:hover .content p:before {
                        background-color: {{ block.settings.color_content_hover }};
                    }
                    #item-{{block.id}} a:hover .content p, #item-{{block.id}} a:hover .image svg, #item-{{block.id}} a:hover .image i {
                        color: {{ block.settings.color_content_hover }};
                    }
                </style>
            </div>
            {% endif %}
        {% endfor %}
    </div>
    {% endif %}
    {% if section.settings.des != blank and section.settings.style_about == 'style_3' %}
        <div class="des des-bottom">
          {{ section.settings.des }}
        </div>
    {% endif %}
  </div>
</div>

<style>
    {% assign margin_bottom =  section.settings.margin_bottom %} 

    {% if section.settings.style_about == 'style_5' %}
        {% if section.settings.bg_color != 'rgba(0,0,0,0)' or section.settings.image_bg_style_4 != blank %}
        #home-about-{{ section.id }} .container .list-item {
            background-color: {{ section.settings.bg_color }};
        }
        {% endif %}
    {% else %}
        {% if section.settings.bg_color != 'rgba(0,0,0,0)' or section.settings.image_bg_style_4 != blank %}
        #home-about-{{ section.id }} {
            {% if section.settings.image_bg_style_4 != blank %}
                background: url({{ section.settings.image_bg_style_4 | img_url: '1920x' }});
                background-repeat: repeat-x;
                background-size: cover;
            {% else %}
                background-color: {{ section.settings.bg_color }};
            {% endif %}
        }
        {% endif %}
    {% endif %}

    {% if section.settings.style_about == 'style_4' %}
        #home-about-{{ section.id }}.style_about_4 .title {
            margin-bottom: 0;
        }
    {% endif %}

    {% if section.settings.style_about == 'style_3' %}
        .home-about-us.style_2 .title {
            font-weight: bold;
        }
        .home-about-us.style_about_3 {
            padding: 56px 0 50px;
        }
    {% endif %}

    {% if section.settings.style_title == 'style_3' %}
        #home-about-{{ section.id }} .container .row {
            background-color: {{ section.settings.bg_color }};
        }
        #home-about-{{ section.id }} .des a {
            color: {{ section.settings.color_des }};
        }

    {% endif %}

    {% if section.settings.style_about == 'style_2' or section.settings.style_about == 'style_3' %}
        .home-about-us.style_about_2 .list-item .item {
            border-color: {{ section.settings.border_bg_color }};
        }
    {% endif %}
  
    #home-about-{{ section.id }} .title {
        color: {{ section.settings.color_title }};
        font-size: {{ section.settings.font_size_title }};
        {% if section.settings.title_sub == blank %}
            {% if section.settings.style_about == 'style_3' %}
                margin-bottom: 35px;
            {% else %}
                margin-bottom: {{ section.settings.font_size_title }};
            {% endif %}
        {% else %}
            margin-bottom: 0;
        {% endif %}
    }

    #home-about-{{ section.id }} .sub-title {
        color: {{ section.settings.color_title_sub }};
        font-size: {{ section.settings.font_size_title_sub }};
    }
    
    #home-about-{{ section.id }} .des {
        color: {{ section.settings.color_des }};
        font-size: {{ section.settings.font_size_des }};
    }

    #home-about-{{ section.id }} .btn-about-us {
        color: {{ section.settings.color_button }};
        border-color: {{ section.settings.color_border_button }};
        background-color: {{ section.settings.bg_color_button }};
    }
    
    @media (min-width: 1200px) {
        #home-about-{{ section.id }} {
        margin-bottom: {{ margin_bottom }}px;
        }
    }   

    {% unless section.settings.display_border_top %}
    #home-about-{{ section.id }} {
        border-top: none;
    }
    {% endunless %}

    .home-about-us.style_about_3 .list-item .item {
        background-color: {{ section.settings.bg_color_item_style_3 }}
    }
</style>



{% schema %}
