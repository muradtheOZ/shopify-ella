<style>
    .site-footer {
        {% if section.settings.bg_footer_color != '' %}
        background: {{ section.settings.bg_footer_color }};
        {% endif %}
        
        {% if section.settings.bg_footer_img == 'bg-footer' %}
        background: url({{ section.settings.bg-footer-img | img_url: '2048x' }});
        background-position: {{ section.settings.bg_footer_position_x }} {{ section.settings.bg_footer_position_y }};
        background-repeat: {{ section.settings.bg_footer_repeat }};
        background-attachment: {{ section.settings.bg_footer_attachment }};
        {% elsif section.settings.bg_footer_img != 'none' %}
        background: url({{ section.settings.bg_footer_img | asset_url }});
        background-position: {{ section.settings.bg_footer_position_x }} {{ section.settings.bg_footer_position_y }};
        background-repeat: {{ section.settings.bg_footer_repeat }};
        background-attachment: {{ section.settings.bg_footer_attachment }};
        {% endif %} 

        {% if section.settings.footer_border_top %}
        border-top: 1px solid {{ section.settings.bg_footer_line_color }}; 
        {% endif %}
    }
    
    .site-footer .newsletter .input-group-field {
        background-color: {{ section.settings.bg_newsletter_color }};
        color: {{ section.settings.newsletter_color }};
        border-color: {{ section.settings.newsletter_border_color }};
    }
    
    .site-footer .newsletter ::-webkit-input-placeholder {
        color: {{ section.settings.newsletter_color }};
    }
    
    .site-footer .newsletter ::-moz-placeholder {
        color: {{ section.settings.newsletter_color }};
    }
    
    .site-footer .newsletter :-ms-input-placeholder {
        color: {{ section.settings.newsletter_color }};
    }
    
    .site-footer .newsletter :-moz-placeholder {
        color: {{ section.settings.newsletter_color }};
    }
    
    .site-footer .newsletter .btn {
        background-color: {{ section.settings.bg_newsletter_button_color }};
        border-color: {{ section.settings.bg_newsletter_button_color }};
        color: {{ section.settings.newsletter_button_color }};
    }
    
    .site-footer .newsletter .btn:hover {
        background-color: {{ section.settings.newsletter_button_color }};
        border-color: {{ section.settings.bg_newsletter_button_color }};
        color: {{ section.settings.bg_newsletter_button_color }};
    }

    .site-footer.footer-06 .newsletter .btn:hover, .site-footer.footer-08 .newsletter .btn:hover {
        background-color: {{ section.settings.bg_newsletter_button_color_hover }};
        border-color: {{ section.settings.bg_newsletter_button_color_hover }};
        color: {{ section.settings.newsletter_button_color_hover }};
    }
    
    .foot-title,
    .footer-09 .footer-newsletter .newsletter-title {
        color: {{ section.settings.footer_title_color }}; 
    }

    .footer-parallax .dropdow-mb {
        border-bottom: 1px solid {{ section.settings.bg_footer_line_color }}; 
    }
   .site-footer .newsletter-title {
  	color: {{ section.settings.footer_title_color }};
   }
  
    .site-footer a,
    .site-footer {
        color: {{ section.settings.footer_link_color }};
    }

    .site-footer .footer-newsletter .newsletter-des {
        color: {{ section.settings.des_newsletter_color }};
    }
    
    .site-footer a:hover {
        color: {{ section.settings.footer_link_hover_color }}; 
    }
    
    .site-footer .foot-link>span:before {
        background-color: {{ section.settings.footer_link_hover_color }}; 
    }
    
    .footer-bottom {
        background-color: {{ section.settings.bg_footer_bottom_color }}; 
        border-top: 1px solid {{ section.settings.bg_footer_line_color }}; 
    }

    .footer-06 .footer-bottom, .footer-08 .footer-bottom {
        border-top: 0;
    }
    
    .footer-bottom,
    .footer-bottom address,
    .footer-bottom address a {
        color: {{ section.settings.footer_bottom_color }}; 
    }    
    
    .footer-bottom address a:hover {
        color: {{ section.settings.footer_bottom_color }}; 
    }

    .footer-06 .footer-bottom address a, .footer-08 .footer-bottom address a {
        color: {{ section.settings.footer_link_color }};
    }

    .footer-06 .footer-bottom address a:hover, .footer-08 .footer-bottom address a:hover {
        color: {{ section.settings.footer_link_hover_color }};
    }
  
  .header-parallax-tpl.layout_default .footer-06 .footer-bottom address a,
  .header-parallax-tpl.layout_default .footer-06 .footer-bottom address a:hover {
  	color: {{ section.settings.footer_bottom_color }}; 
  }
  
   .header-parallax-tpl.layout_default .footer-06 .footer-bottom {
   	 padding-top: 25px;
     padding-bottom: 35px;
   }

    .footer-06 .footer-top, .footer-08 .footer-top {
        background-color: {{ section.settings.newsletter_bg_color }}
    }

    .footer-08 .footer-middle .location_info {
        color: {{ section.settings.footer_text_color }};
    }

    .footer-08 .footer-middle .column_info:before {
        background-color: {{ section.settings.bg_footer_line_color }}
    }
  
    {% if section.settings.footer_newsletter_border_bottom_enable %}
        .footer-06 .footer-top .footer-newsletter {
            border-bottom: 1px solid {{ section.settings.footer_border_bottom_color }};
            padding-bottom: 60px;
        }
        .footer-06 .footer-top {
            padding: 50px 0 20px 0;
        }
        .footer-06 .footer-middle {
            padding: 10px 0 20px 0;
        }
        .footer-06 .footer-top .footer-newsletter .newsletter-title {
            font-weight: 600;
        }
        .footer-06 .footer-bottom {
            padding-bottom: 40px;
            padding-top: 40px;
        }
    {% endif %}

    @media (max-width: 767px) {
        .site-footer .dropdow-mb {
            border-bottom: 1px solid {{ section.settings.bg_footer_line_color }}; 
        }
    }
</style>