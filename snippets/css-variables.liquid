	  --fonts_name: {{fonts_name}};
	  --fonts_name_2: {{fonts_name_2}};

      /* Color */
      --body_bg: {{ settings.body_bg }};
      --body_color: {{ settings.body_color }};
      --link_color: {{ settings.link_color }};
      --link_color_hover: {{ settings.link_color_hover }};

