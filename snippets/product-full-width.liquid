<div class="product-template product-template-full-width product-template-2-blocks">
    <div class="bg-breddcrumb">
        <div class="container-padd60">
            {% if collection %}
                <div class="next_prev-groups">
                    {% render 'breadcrumb' %}
                    {% render 'next-prev-product' %}    
                </div>
            {% else %}
                {% render 'breadcrumb' %}
            {% endif %}
        </div>
    </div>
    <div class="container-padd60">
        <div class="halo-product-content">
            <div class="row pro-page">
                {% render 'product-template-full-width', product: product, enable_compare_color: enable_compare_color, show_compare_color: show_compare_color, enable_hot_stock: enable_hot_stock, option_color_swatch: option_color_swatch %}
                {% render 'product-banner' %}
            </div>
        </div> 
    </div>
</div>